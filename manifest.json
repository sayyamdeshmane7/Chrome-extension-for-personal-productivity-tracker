{
  "manifest_version": 3,
  "name": "Productivity Tracker",
  "version": "1.0",
  "description": "Track and enhance your personal productivity",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "alarms"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Productivity Tracker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
